<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/click_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/img_cover"
        android:src="@drawable/placeholder_disk_210"
        android:layout_width="40dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_toRightOf="@+id/img_cover"
        android:id="@+id/song_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
        android:paddingTop="10dip"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="20"
        android:textColor="@color/textColor" />
    <TextView
        android:layout_toRightOf="@+id/img_cover"
        android:layout_below="@+id/song_name"
        android:id="@+id/song_singer"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="20"
        android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#7D7D7D" />
    <ImageView
        android:background="@drawable/selector_click_background"
        android:layout_alignParentRight="true"
        android:id="@+id/more"
        android:paddingRight="10dp"
        android:src="@drawable/list_icn_more"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
    <View
        android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
        android:layout_toRightOf="@+id/img_cover"
        android:layout_alignParentBottom="true"
        android:paddingTop="12dp"
        android:background="@color/white_background"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>
</RelativeLayout>