<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/click_background"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/cover"
        android:layout_centerVertical="true"
        android:src="@drawable/placeholder_disk_210"
        android:layout_width="50dp"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/textColor"
            android:id="@+id/tv_songListName"
            android:text="歌单"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:clickable="true"
            android:background="@drawable/selector_click_background"
            android:layout_alignParentRight="true"
            android:id="@+id/img_more"
            android:paddingRight="20dp"
            android:src="@drawable/list_icn_more"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <View
            android:layout_marginLeft="10dp"
            android:background="@color/lineColor"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>


</LinearLayout>