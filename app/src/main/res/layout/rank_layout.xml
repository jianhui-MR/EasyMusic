<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/click_background"
            android:id="@+id/SurgeMusic_Rank"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/biaoshengbang"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <TextView
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/SurgeMusic_text"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/click_background"
            android:id="@+id/NewMusic_Rank"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/xingebang"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <TextView
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/NewMusic_text"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/click_background"
            android:id="@+id/OriginalMusic_Rank"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/yuanchuangbang"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <TextView
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/OriginalMusic_text"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/click_background"
            android:id="@+id/HotMusic_Rank"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/regebang"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <TextView
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/HotMusic_text"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/click_background"
            android:id="@+id/Acg_Rank"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/acgbang"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <TextView
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/AcgMusic_text"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/click_background"
            android:id="@+id/Billboard_Rank"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/billboard"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <TextView
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/BillboardMusic_text"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>